<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="admingenerator.generator" class="Admingenerator\GeneratorBundle\Generator\DoctrineGenerator" public="false"></service>

        <service id="admingenerator.generator.listener" class="Admingenerator\GeneratorBundle\EventListener\ControllerListener">
            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" />
            <argument type="service" id="admingenerator.generator" />
        </service>
    </services>
</container>
