{% block nestedset_modal %}
{{ echo_block("nestedset_modal") }}
    <div id="nestedset_loading" class="modal hide fade" data-keyboard="false" data-backdrop="static">
        <div class="modal-header">
            <h3>{{ echo_trans('nested.list.loading') }}</h3>
        </div>
        <div class="modal-body">
            <p class="loader"></p>
        </div>
    </div>
    
    <div class="hidden">
        <div id="nestedset_success" class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert">×</button>
            {{ echo_trans('nested.list.success') }}
        </div>

        <div id="nestedset_error" class="alert alert-error">
            <button type="button" class="close" data-dismiss="alert">×</button>
            {{ echo_trans('nested.list.error') }}
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function(){
            $('#nestedset_loading .modal-body .loader').css({
                'width': '1px', 'height': '1px',
                'margin': '0 auto', 'padding': '60px'
            }).spin({
                lines: 16, length: 20, width: 8, radius: 25, corners: 1
            });
        });
    </script>
{{ echo_endblock() }}
{% endblock %}
