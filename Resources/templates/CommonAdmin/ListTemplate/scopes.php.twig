{% block list_scopes %}
{{ echo_block("list_scopes") }}
{% if scopes is defined %}
<div class="list_scopes">
    {% for groupName, group in scopes %}
    <div class="list_scope_group">
        {% for scopeName, params in group %}
            <a class="{{ echo_twig("scopes['" ~ groupName ~ "'] == '" ~ scopeName ~ "' ? 'active': 'inactive'") }}" href="{{ echo_path(namespace_prefix ~ '_' ~ bundle_name ~ ( builder.BaseGeneratorName ? "_" ~ builder.BaseGeneratorName : "" ) ~ '_scopes',
                "{ 'group': '" ~  groupName ~ "', 'scope': '" ~ scopeName ~ "' }") }}">
                {{ scopeName }}
            </a>
        {% endfor %}
    </div>
    {% endfor %}
</div>
{% endif %}
{{ echo_endblock() }}
{% endblock %}
