{% use "../CommonAdmin/EditTemplate/actions.php.twig" %}
{% use "../CommonAdmin/EditTemplate/fieldset.php.twig" %}
{% block form %}

    {{ echo_block('form') }}
    <form
        {{ echo_if (builder.ModelClass ~ ".id") }}
            action="{{ echo_path(namespace_prefix ~ '_' ~ bundle_name ~ ( builder.BaseGeneratorName ? "_" ~ builder.BaseGeneratorName : "" ) ~ "_update", "{ 'id': " ~ builder.ModelClass ~ ".id }" ) }}"
        {{ echo_else() }}
            action="{{ echo_path(namespace_prefix ~ '_' ~ bundle_name ~ ( builder.BaseGeneratorName ? "_" ~ builder.BaseGeneratorName : "" ) ~ "_create" ) }}"
        {{ echo_endif () }}
        method="post" {{ echo_twig("form_enctype(form)") }}>

        {{ echo_twig("form_errors(form)") }}

        {% for fieldset in builder.fieldsets|keys %}
            {{- block('form_fieldset') }}
        {% endfor -%}
        <ul class="actions">
            <li>
                 {{ echo_twig("form_rest(form)") }}
                 <input type="submit" class="submit_button" value="{{ echo_trans('form.btn_save') }}" />
            </li>
        </ul>

        {{ block("form_actions") }}
    </form>
    {{ echo_endblock() }}
{% endblock %}
