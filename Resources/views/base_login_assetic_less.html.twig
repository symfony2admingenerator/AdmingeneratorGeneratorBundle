<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{% block title %}Admin{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% block scripts_head %}
        <script type="text/javascript" src="{{ asset('bundles/admingeneratorgenerator/jquery/jquery-1.10.1.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/admingeneratorgenerator/jquery-ui/js/jquery-ui-1.10.3.min.js') }}"></script>

        <!-- HTML5 shiv, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
            <script src="{{ asset('bundles/admingeneratorgenerator/html5shiv/html5shiv.min.js') }}"></script>
        <![endif]-->
        <!--[if lte IE 7]>
            <script src="{{ asset('bundles/admingeneratorgenerator/elusive-iconfont/js/lte-ie7.min.js') }}"></script>
        <![endif]-->
    {% endblock %}

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/admingeneratorgenerator/bootstrap/css/bootstrap-2.3.2.min.css') }}" type="text/css" media="all" />
        <link rel="stylesheet" href="{{ asset('bundles/admingeneratorgenerator/elusive-iconfont/css/elusive-webfont.min.css') }}" type="text/css" media="all" />

        <!-- admingenerator.min.css -->
        <link rel="stylesheet" href="{{ asset('bundles/admingeneratorgenerator/css/admingenerator/general.css') }}" type="text/css" media="all" />
        <link rel="stylesheet" href="{{ asset('bundles/admingeneratorgenerator/css/admingenerator/profile.css') }}" type="text/css" media="all" />
    {% endblock %}

    {% block icons %}
        <!-- Favicon and touch icons -->
        <link rel="shortcut icon" href="{{ asset('bundles/admingeneratorgenerator/ico/favicon.ico') }}">
        <link rel="apple-touch-icon-precomposed" sizes="144x144" href="{{ asset('bundles/admingeneratorgenerator/ico/apple-touch-icon-144-precomposed.png') }}">
        <link rel="apple-touch-icon-precomposed" sizes="114x114" href="{{ asset('bundles/admingeneratorgenerator/ico/apple-touch-icon-114-precomposed.png') }}">
        <link rel="apple-touch-icon-precomposed" sizes="72x72" href="{{ asset('bundles/admingeneratorgenerator/ico/apple-touch-icon-72-precomposed.png') }}">
        <link rel="apple-touch-icon-precomposed" href="{{ asset('bundles/admingeneratorgenerator/ico/apple-touch-icon-57-precomposed.png') }}">
    {% endblock %}
  </head>

  <body>

    {% block navbar %}
      {% include 'AdmingeneratorGeneratorBundle::base_admin_navbar.html.twig' %}
    {% endblock navbar %}

    <div class="container-fluid">
      {% block body %}
        <div class="row-fluid">
          <form class="form-horizontal">
            <legend>Login form</legend>

            <div class="control-group">
              <label class="control-label" for="username">Username</label>
              <div class="controls">
                <input type="text" id="username" placeholder="Username">
              </div>
            </div>

            <div class="control-group">
              <label class="control-label" for="password">Password</label>
              <div class="controls">
                <input type="password" id="password" placeholder="Password">
              </div>
            </div>

            <div class="form-actions">
              <label class="control-label"><input type="checkbox"> Remember me</label>
              <div class="controls">
                <button type="submit" class="btn btn-primary">Sign in</button>
              </div>
            </div>
          </form>
        </div><!--/.row-fluid -->
      {% endblock %}

      {% block footer %}
      <footer>
        <hr>
        <p>{% block footer_text %}&copy; Symfony2Admingenerator {{ ("now"|date('Y') > 2012) ? '2012 - ' ~ "now"|date('Y') : '2012' }}{% endblock %}</p>
      </footer>
      {% endblock %}
    </div> <!--/.container-fluid -->

    {% block javascripts %}
        <script type="text/javascript" src="{{ asset('bundles/admingeneratorgenerator/bootstrap/js/bootstrap-2.3.2.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/admingeneratorgenerator/spin/spin.min.js') }}"></script>
    {% endblock %}

  </body>
