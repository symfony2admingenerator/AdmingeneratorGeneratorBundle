<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>{% block title %}Admin{% endblock %}</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <meta name="viewport" content="width=device-width">

    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/admingeneratorgenerator/css/bootstrap.min.css') }}">
    <style>
    body {
      padding-top: 60px;
      padding-bottom: 40px;
  }
  </style>
  <link rel="stylesheet" href="{{ asset('bundles/admingeneratorgenerator/css/bootstrap-responsive.min.css') }}">
  <link rel="stylesheet" href="{{ asset('bundles/admingeneratorgenerator/css/style.css') }}">

  {% endblock %}
  {% block javascript_head %}
  <script src="{{ asset('bundles/admingeneratorgenerator/js/modernizr-2.5.3-respond-1.1.0.min.js') }}"></script>
  {% endblock %}
</head>
<body>
    <!--[if lt IE 7]><p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p><![endif]-->

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>
        {% block logo %}
        <a class="brand" href="#">Admin</a>
        {% endblock %}
        <div class="nav-collapse">
            <ul class="nav nav-pills">
              <li class="dropdown" id="menu1">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#menu1">
                  Menu
                  <b class="caret"></b>
              </a>
              {% block menu %}
              {{ knp_menu_render('admin') }}
              {% endblock %}
          </li>
          
          {% block profile %}
          <div class="span8 offset1">
              <ul class="nav pull-right">
                <li>
                    <a href="#">Welcome</a>
                </li>
                <li>
                    <a class='logout' href="#">Log out will be connect to security</a>
                </ul>
            </div>
            {% endblock %}
        </div><!--/.nav-collapse -->
    </div>
</div>
</div>

<div class="container-fluid">
    <div class="row-fluid">

     {% block flashes %}
     {% if app.session.hasFlash('success') %}
     <div class="alert alert-success">
          <a class="close" data-dismiss="alert" href="#">×</a>
        {{ app.session.flash('success')|raw }}
    </div>
    {% endif %}
    {% if app.session.hasFlash('error') %}
    <div class="alert alert-error">
          <a class="close" data-dismiss="alert" href="#">×</a>
        {{ app.session.flash('error')|raw }}
    </div>
    {% endif %}
    {% endblock %}
</div>

{% block body %}{% endblock %}


</div>
{% block javascript_foot %}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<script type="text/javascript" src="{{ asset('bundles/admingeneratorgenerator/js/bootstrap/bootstrap.min.js') }}"></script>
{% endblock %}
</body>
</html>
