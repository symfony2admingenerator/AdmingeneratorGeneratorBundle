{# Fallback for general stylesheet blocks if GenemuFormBundle is not avaliable #}

{% block form_stylesheet %}
{% spaceless %}
    {% for child in form %}
        {{ form_stylesheet(child) }}
    {% endfor %}
{% endspaceless %}
{% endblock form_stylesheet %}

{% block field_stylesheet "" %}

{# Admingenerator stylesheet blocks #}

{% block collection_stylesheet %}
{% spaceless %}
{% if widget is sameas('table') or widget is sameas('fieldset') %}
    {% if sortable is not null %}
    <style type="text/css">
    /* Hide sortable field */
    {{ ('#'~id~' > .collection > .collection-item > div > div.control-group.'~sortable)|raw }},
    {{ ('#'~id~' > .collection > .collection-item > td > div > div.control-group.'~sortable)|raw }}
    { visibility: hidden; position: absolute; }
    </style>
    {% endif %}
{% endif %}
{% endspaceless %}
{% endblock collection_stylesheet %}