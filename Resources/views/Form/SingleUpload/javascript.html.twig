<script type="text/javascript">
    $(document).ready(function(){
        $('#{{ id }}').agen$singleUpload({
            maxWidth:   {{ maxWidth }},
            maxHeight:  {{ maxHeight }},
            minWidth:   {{ minWidth }},
            minHeight:  {{ minHeight }},
            previewImages:    {{ previewImages  ? 'true' : 'false'}},
            previewAsCanvas:  {{ previewAsCanvas }},
            isEmpty:    {{ (form.vars.data|default is empty) ? 'true' : 'false' }},
            nameable:   {{ (nameable|default is not empty) ? 'true' : 'false' }},
            filetypes:  {
                'audio':            "{{ 'filetype.audio'|trans({}, 'Admingenerator')|raw }}",
                'archive':          "{{ 'filetype.archive'|trans({}, 'Admingenerator')|raw }}",
                'html':             "{{ 'filetype.html'|trans({}, 'Admingenerator')|raw }}",
                'image':            "{{ 'filetype.image'|trans({}, 'Admingenerator')|raw }}",
                'pdf-document':     "{{ 'filetype.pdf-document'|trans({}, 'Admingenerator')|raw }}",
                'plain-text':       "{{ 'filetype.plain-text'|trans({}, 'Admingenerator')|raw }}",
                'presentation':     "{{ 'filetype.presentation'|trans({}, 'Admingenerator')|raw }}",
                'spreadsheet':      "{{ 'filetype.spreadsheet'|trans({}, 'Admingenerator')|raw }}",
                'text-document':    "{{ 'filetype.text-document'|trans({}, 'Admingenerator')|raw }}",
                'unknown':          "{{ 'filetype.unknown'|trans({}, 'Admingenerator')|raw }}",
                'video':            "{{ 'filetype.video'|trans({}, 'Admingenerator')|raw }}"
            }
        });
    });
</script>