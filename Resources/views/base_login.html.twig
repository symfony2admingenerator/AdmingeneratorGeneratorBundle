<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{% block title %}Admin{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
        
    {% block scripts_head %}        
        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js"></script>
    {% endblock %}

    {% block stylesheets %}
        {% stylesheets filter='cssrewrite,?yui_css' output='assetic/css/compiled/bootstrap.css'
            'bundles/admingeneratorgenerator/css/bootstrap.css'
            'bundles/admingeneratorgenerator/css/bootstrap-extended.css'
            'bundles/admingeneratorgenerator/css/datepicker.css'
        %}
            <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="all" />
        {% endstylesheets %}
        {% stylesheets filter='cssrewrite,?yui_css' output='assetic/css/compiled/bootstrap-responsive.css'
            'bundles/admingeneratorgenerator/css/bootstrap-responsive.css'
        %}
            <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="all" />
        {% endstylesheets %}
            
        <style type="text/css">
          body {
            padding-top: 60px;
            padding-bottom: 40px;
          }
        </style>
    {% endblock %}

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    {% block icons %}
      <!-- Favicon and touch icons -->
      <link rel="shortcut icon" href="{{ asset('/ico/favicon.ico') }}">
      <link rel="apple-touch-icon-precomposed" sizes="144x144" href="{{ asset('/ico/apple-touch-icon-144-precomposed.png') }}">
      <link rel="apple-touch-icon-precomposed" sizes="114x114" href="{{ asset('/ico/apple-touch-icon-114-precomposed.png') }}">
      <link rel="apple-touch-icon-precomposed" sizes="72x72" href="{{ asset('/ico/apple-touch-icon-72-precomposed.png') }}">
      <link rel="apple-touch-icon-precomposed" href="{{ asset('/ico/apple-touch-icon-57-precomposed.png') }}">
    {% endblock %}
  </head>

  <body>

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          {% block logo %}
            <a class="brand" href="#">Admin</a>
          {% endblock %}
          <div class="nav-collapse collapse">
            {% block profile %}              
              <ul class="nav pull-right">
                <li><p class="navbar-text" style="padding-right: 10px;"><b>Welcome</b>, anonymous!</p></li>
                <li><button href="#" class="btn disabled" title="Log out will be connected to security">Log out</button></li>
              </ul>
            {% endblock %}
            {% block menu %}
              {{ knp_menu_render('admin') }}
            {% endblock %}
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        {% block body %}
          <form class="form-horizontal">
            <legend>Login form</legend>
            
            <div class="control-group">
              <label class="control-label" for="username">Username</label>
              <div class="controls">
                <input type="text" id="username" placeholder="Username">
              </div>
            </div>
            
            <div class="control-group">
              <label class="control-label" for="password">Password</label>
              <div class="controls">
                <input type="password" id="password" placeholder="Password">
              </div>
            </div>
            
            <div class="form-actions">
              <label class="control-label"><input type="checkbox"> Remember me</label>
              <div class="controls">
                <button type="submit" class="btn btn-primary">Sign in</button>
              </div>
            </div>
          </form>
        {% endblock %}
      </div><!--/row-->
      
      <hr>

      <footer>
        <p>
          {% block footer %}
            &copy; Company 2012
          {% endblock %}
        </p>
      </footer>

    </div> <!-- /container -->
    
    {% block javascripts %}
        {% javascripts filter='?yui_js' output='assetic/js/compiled/bootstrap.js'
            'bundles/admingeneratorgenerator/js/bootstrap.js'
            'bundles/admingeneratorgenerator/js/bootstrap-datepicker.js'
            'bundles/admingeneratorgenerator/js/locales/bootstrap-datepicker.*.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}    
    {% endblock %}

  </body>
